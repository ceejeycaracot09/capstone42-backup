    </ScrollView>

    <Button
        android:id="@+id/applyButton"
        android:backgroundTint="#FDA905"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Apply"
        android:textColor="@color/black"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="650dp" />


</RelativeLayout>