<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Save_Jobs_Fragment_jobSeeker">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/search_view_bg"
        app:queryHint="Search Job..."
        app:iconifiedByDefault="false"/>
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Job"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="200dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_bookmarks_24"
        android:layout_marginTop="158dp"
        android:layout_marginLeft="250dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/jobDetailsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9E8E8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#FDA905"
                android:background="@drawable/baseline_bookmarks_24"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/baseline_remove_red_eye_24"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/company_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Systems Administrator"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Naxos Global Distribution Limited Inc. (ROHQ)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Makati City"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="PHP 23k-27k monthly"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Up to 14th months' pay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="Flexible working hours and hybrid setup"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:text="HMO Coverage w/ dependents"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>